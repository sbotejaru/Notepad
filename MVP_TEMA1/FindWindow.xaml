<Window x:Class="MVP_TEMA1.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_TEMA1"
        mc:Ignorable="d"
        Height="100" Width="314.13" Title="Find" ResizeMode="NoResize">
    <!--<Window.DataContext>
        <local:MainVM/>
    </Window.DataContext>-->
    <Grid>                
        <Button x:Name="find_btn" Content="Find" Margin="244,20,10,21" Command="{Binding FindInputCommand}"/>
        <TextBox x:Name="input_box" Margin="76,20,66,21" Text="{Binding ContentText}"></TextBox>
        <TextBlock x:Name="find_block" HorizontalAlignment="Left" Width="66" Margin="10,23,0,16" RenderTransformOrigin="0.611,1.33">Find what:</TextBlock>
    </Grid>
</Window>
