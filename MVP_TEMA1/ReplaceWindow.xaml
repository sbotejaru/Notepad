<Window x:Class="MVP_TEMA1.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_TEMA1"
        mc:Ignorable="d"
        Title="Replace" Height="170" Width="314">    
    <Grid>
        <TextBlock Text="Replace what:" Margin="4,20,216,72" />
        <TextBlock Text="Replace with:" Margin="4,52,216,47"/>
        <TextBox Text="{Binding ReplaceText}" Margin="95,20,28,87"/>
        <TextBox Text="{Binding ReplaceToText}" Margin="95,52,28,54"/>
        <Button Content="Replace" Margin="105,90,108,20" Command="{Binding ReplaceInput}" Name="replace_all_btn"/>
    </Grid>
</Window>
